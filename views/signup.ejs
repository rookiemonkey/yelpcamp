<%- include("partials/header") %>

<section id="signUpFormContainerParent">
    <div id="formContainer">

        <!-- sign up form -->
        <h1 class="ui header">
            <svg xmlns="http://www.w3.org/2000/svg" width="52" height="52" viewBox="0 0 24 24">
                <path
                    d="M15.812 4.819c-.33-.341-.312-.877.028-1.207l3.469-3.365c.17-.164.387-.247.603-.247.219 0 .438.085.604.257l-4.704 4.562zm-5.705 8.572c-.07.069-.107.162-.107.255 0 .194.158.354.354.354.089 0 .178-.033.247-.1l.583-.567-.493-.509-.584.567zm4.924-6.552l-1.994 1.933c-1.072 1.039-1.619 2.046-2.124 3.451l.881.909c1.419-.461 2.442-.976 3.514-2.016l1.994-1.934-2.271-2.343zm5.816-5.958l-5.137 4.982 2.586 2.671 5.138-4.98c.377-.366.566-.851.566-1.337 0-1.624-1.968-2.486-3.153-1.336zm-11.847 12.119h-4v1h4v-1zm9-1.35v1.893c0 4.107-6 2.457-6 2.457s1.518 6-2.638 6h-7.362v-20h12.629l2.062-2h-16.691v24h10.189c3.163 0 9.811-7.223 9.811-9.614v-4.687l-2 1.951z" />
            </svg>
            <div class="content" style="margin: 0px 15px;">
                Signup
                <div class="sub header">Connect to campground owners or add your own!</div>
            </div>
        </h1>

        <!-- error message -->
        <% if (error.length > 0) { %>
        <div class="ui negative message">
            <div class="header"><%= error %></div>
        </div>
        <% } %>

        <form class="ui form" action="/campgrounds/users/signup" method="POST" enctype="multipart/form-data">
            <div class="field">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" placeholder="John" autocomplete="off" maxlength="50"
                    required>
            </div>
            <div class="field">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" placeholder="Doe" autocomplete="off" maxlength="50"
                    required>
            </div>
            <div class="field">
                <label for="avatar">Avatar</label>
                <span id="Avatar_label">
                    Ignore if you want a
                    <span id="modalbutton">
                        default avatar
                    </span>
                </span>
                <input type="file" id="avatar" name="avatar">
            </div>
            <div class="field">
                <label for="Username">Username</label>
                <input type="text" id="Username" name="username" placeholder="rookiemonkey123" autocomplete="off"
                    maxlength="50" required>
            </div>
            <div class="field">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="john@example.com" autocomplete="off"
                    maxlength="50" required>
            </div>
            <div class="field">
                <label for="Password">Password</label>
                <span id="Password_label">minimum of 8 characters</span>
                <input type="password" id="Password" name="password" placeholder="Password" autocomplete="off"
                    maxlength="50" required>
            </div>
            <div class="field">
                <label for="ConfirmPassword">Confirm Password</label>
                <input type="password" id="Password" name="confirmPassword" placeholder="Confirm Password"
                    autocomplete="off" maxlength="50" required>
            </div>
            <button class="ui button" type="submit">Sign Up</button>
        </form>

    </div>
</section>

<div class="ui mini modal">
    <div class="header">Default Avatar</div>
    <div class="image content">
        <img class='ui avatar medium image'
            src="https://res.cloudinary.com/promises/image/upload/v1596613153/global_default_image.png">
    </div>
</div>

<script>
    $('#modalbutton').on('click', () => {
        $('.ui.mini.modal').modal('show');
    })
</script>


<%- include("partials/footer") %>