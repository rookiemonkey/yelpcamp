<%- include("partials/header") %>

<section id="forgotPasswordFormContainerParent">
    <div id="formContainer">

        <h1 class="ui header">
            <svg class="icon_custom" width="52" height="52" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd"
                clip-rule="evenodd" viewBox="0 0 24 24">
                <path
                    d="M23.621 9.012c.247.959.379 1.964.379 3 0 6.623-5.377 11.988-12 11.988s-12-5.365-12-11.988c0-6.623 5.377-12 12-12 2.581 0 4.969.822 6.927 2.211l1.718-2.223 1.935 6.012h-6.58l1.703-2.204c-1.62-1.128-3.582-1.796-5.703-1.796-5.52 0-10 4.481-10 10 0 5.52 4.48 10 10 10 5.519 0 10-4.48 10-10 0-1.045-.161-2.053-.458-3h2.079zm-7.621 7.988h-8v-6h1v-2c0-1.656 1.344-3 3-3s3 1.344 3 3v2h1v6zm-5-8v2h2v-2c0-.552-.448-1-1-1s-1 .448-1 1z" />
            </svg>
            <div class="content">
                Forgot Password
                <div class="sub header">Request a password reset token</div>
            </div>
        </h1>

        <div class="ui blue message">
            <p style="color: black;">Password reset tokens are only available for 1 hour. If you are not able to do
                the reset w/in an hour,
                please request another password reset.</p>
        </div>

        <!-- success message -->
        <% if (success.length > 0) { %>
        <div class="ui positive message">
            <div class="header"><%= success %></div>
        </div>
        <% } %>

        <!-- error message -->
        <% if (error.length > 0) { %>
        <div class="ui negative message">
            <div class="header"><%= error %></div>
        </div>
        <% } %>

        <form class="ui form" action="/campgrounds/users/forgot_password" method="POST">
            <div class="field">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Email" autocomplete="off" maxlength="50"
                    required>
            </div>
            <button class="ui button" type="submit">Reset</button>
        </form>

    </div>
</section>

<%- include("partials/footer") %>