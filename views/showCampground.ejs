        maxZoom: 18,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: 'pk.eyJ1Ijoicm9va2llbW9ua2V5IiwiYSI6ImNrYm9saXRhbzIycGIyd215bWw4cDJtdmEifQ.CEstCFxd-sVsSA6ef_fgMA'
    }).addTo(mymap);

</script>

<%- include("partials/footer") %>