<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <script src="https://kit.fontawesome.com/f5d315bff2.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
    <title>Yelp Camp</title>
</head>
<body>

<header id="headline">
    <nav class="ui borderless main menu" style="background-color: transparent; border: none; box-shadow: none; border-radius: 0px;">
        <div class="ui text container">
          <div class="header item">
            <span><i class="bandcamp icon"></i>Yelp Camp</span>
            <% if (user !== undefined) { %>
              <a href="/campgrounds" class="item">Home</a>
              <a href="/campgrounds/new" class="item">Add</a>
              <a href="/campgrounds/logout" class="item">Logout</a>
            <% } %>
          </div>
          <div class="nav options">
            <% if (user === undefined) { %>
              <a href="/campgrounds" class="item">Home</a>
              <a href="/campgrounds/login" class="item">Login</a>
              <a href="/campgrounds/signup" class="item">Sign Up</a>
            <% } else { %>
              <span class="item">Good day, &nbsp <strong><%= user.username %></strong></span>
              <% if(role != null) { %>
                <span class="item">Role: ADMIN </span>
              <% } %>
            <% } %>
          </div>
        </div>
      </nav>
    <div id="headlineContainer">

      <!-- message for successfully adding a camp -->
      <% if (success.length > 0) { %>
          <div class="ui positive message" style="margin: 0 0 5% 0">
              <div class="header" style="text-align: center;"><%= success %></div>
          </div>
      <% } %>

      <!-- message for successfully deleting a camp -->
      <% if (info.length > 0) { %>
          <div class="ui positive message" style="margin: 0 0 5% 0">
              <div class="header" style="text-align: center;"><%= info %></div>
          </div>
      <% } %>

      <!-- message for any errors -->
      <% if (error.length > 0) { %>
          <div class="ui negative message" style="margin: 0 0 5% 0">
              <div class="header" style="text-align: center;"><%= error %></div>
          </div>
      <% } %>

        <div style="margin: 5% 0 0">
          <i class="fas fa-campground"></i>
          <h1>Yelp Camp</h1>
          <hr>
          <span><em>“Sleep under a blanket of stars, and your heart will forever be kept warm by your love of life.”</em></span>
          <form action="/campgrounds" method="GET">
              <div class="ui large icon input">
                <input type="text" placeholder="Search" name="search" autocomplete="off">
                <i class="search icon" style="color: white"></i>
              </div>
          </form>
        </div>
        <button class="ui button"><a href="#campgrounds">Start Now</a></button>
    </div>
</header>