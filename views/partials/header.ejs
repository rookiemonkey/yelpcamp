<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <script src="https://kit.fontawesome.com/f5d315bff2.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
    <title>Yelp Camp</title>
</head>
<body>
  <nav class="ui borderless main menu">
    <div class="ui text container">
      <div class="header item">
        <span><i class="bandcamp icon"></i>Yelp Camp</span>
        <% if (user !== undefined) { %> 
          <a href="/campgrounds" class="item">Home</a>
          <a href="/campgrounds/new" class="item">Add</a> 
          <a href="/campgrounds/logout" class="item">Logout</a>
        <% } %>
      </div>
      <div class="nav options">
        <% if (user === undefined) { %> 
          <a href="/campgrounds" class="item">Home</a>
          <a href="/campgrounds/login" class="item">Login</a>
          <a href="/campgrounds/signup" class="item">Sign Up</a>
        <% } else { %> 
          <span class="item">Good day, &nbsp <strong><%= user.username %></strong></span>
        <% } %> 
      </div>
    </div>
  </nav>