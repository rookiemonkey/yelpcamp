<%- include("partials/header") %>

<style>
    #profile_sidebar,
    #profile_camplist {
        border: 2px solid red;
        margin: 10px;
    }

    #profile_sidebar {
        width: 300px;
    }

    #profile_camplist {
        width: 500px;
    }

    #profile_avatar {
        border: 2px solid red;
    }

    #profile_listmetas {
        list-style-type: none;
    }

    #profile_parentContainer {
        border: 5px solid pink;
        height: max-width;
        display: flex;
        justify-content: center;
    }
</style>

<article id="profile_parentContainer">
    <section id="profile_sidebar" class="six wide column>">
        <img id="profile_avatar" class="ui medium circular image" src="<%= foundUser.avatar %>" />
        <h1><%= foundUser.firstName %> <%= foundUser.lastName %></h1>
        <ul id="profile_listmetas">
            <li>Username: <%= foundUser.username %></li>
            <li>Email: <%= foundUser.email %></li>
        </ul>
    </section>

    <section id="profile_camplist">
        <h5>Uploaded Camps</h5>
        <div id="profile_listcamps" class="ui items">

            <% foundUserCamps.forEach(camp => { %>
            <div id="profile_camplistitem" class="item">
                <div class="ui small image">
                    <img src="<%= camp.image %>">
                </div>
                <div class=" content">
                    <div class="header">
                        <a href="/campgrounds/camps/<%= camp._id %>"><%= camp.campname %></a>
                    </div>
                    <div class="meta">
                        <span class="price">$<%= camp.price %> </span>
                        <span class="stay"> /nigth</span>
                    </div>
                    <div class="description">
                        <p><%= camp.description.substring(0, 70) %></p>
                    </div>
                </div>
            </div>
            <% }) %>

        </div>
    </section>
</article>

<%- include("partials/footer") %>